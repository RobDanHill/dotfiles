# vim:ft=toml

[apps.bash]
name = "bash"

[[apps.bash.links]]
path = "$HOME/.bashrc"
target = "bash/.bashrc"

[[apps.bash.links]]
path = "$HOME/.bashrc.d/alias"
target = "bash/.bashrc.d/alias"

[[apps.bash.links]]
path = "$HOME/.bashrc.d/env"
target = "bash/.bashrc.d/env"

[apps.alacritty]
name = "Alacritty"

[[apps.alacritty.links]]
path = "$HOME/.config/alacritty/alacritty.yml"
target = "alacritty/alacritty.linux.yml"

[apps.doom]
name = "DOOM Emacs"

[[apps.doom.links]]
path = "$HOME/.config/doom/init.el"
target = "doom/init.el"

[[apps.doom.links]]
path = "$HOME/.config/doom/config.el"
target = "doom/config.el"

[[apps.doom.links]]
path = "$HOME/.config/doom/custom.el"
target = "doom/custom.el"

[[apps.doom.links]]
path = "$HOME/.config/doom/packages.el"
target = "doom/packages.el"

[apps.helix]
name = "Helix"

[[apps.helix.links]]
path = "$HOME/.config/helix/config.toml"
target = "helix/config.toml"

[[apps.helix.links]]
path = "$HOME/.config/helix/languages.toml"
target = "helix/languages.toml"

[[apps.helix.links]]
path = "$HOME/.config/helix/themes/gruber_darker.toml"
target = "helix/themes/gruber_darker.toml"

[apps.kitty]
name = "Kitty"

[[apps.kitty.links]]
path = "$HOME/.config/kitty/kitty.conf"
target = "kitty/kitty.conf"

[apps.starship]
name = "Starship"

[[apps.starship.links]]
path = "$HOME/.config/starship.toml"
target = "starship/starship.toml"

[apps.nvim]
name = "Neovim"

[[apps.nvim.links]]
path = "$HOME/.config/nvim/neoconf.json"
target = "nvim/neoconf.json"

[[apps.nvim.links]]
path = "$HOME/.config/nvim/lazy-lock.json"
target = "nvim/lazy-lock.json"

[[apps.nvim.links]]
path = "$HOME/.config/nvim/init.lua"
target = "nvim/init.lua"

[[apps.nvim.links]]
path = "$HOME/.config/nvim/custom/plugins/init.lua"
target = "nvim/custom/plugins/init.lua"

[[apps.nvim.links]]
path = "$HOME/.config/nvim/kickstart/plugins/autoformat.lua"
target = "nvim/kickstart/plugins/autoformat.lua"

[[apps.nvim.links]]
path = "$HOME/.config/nvim/kickstart/plugins/debug.lua"
target = "nvim/kickstart/plugins/debug.lua"

[apps.zellij]
name = "Zellij"

[[apps.zellij.links]]
path = "$HOME/.config/zellij/config.kdl"
target = "zellij/config.kdl"
